<p id="notice"><%= notice %></p>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Body</th>
      <th>Commentable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user.email %></td>
        <td><%= comment.body %></td>
        <td><%= link_to comment.commentable, polymorphic_path(comment.commentable) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @comments, :theme => 'twitter-bootstrap-3' %>
