<!DOCTYPE html>
<html>
  <head>
    <title>Fresh</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">GFresh</a>
          </div>

          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <li class="<%= 'active' if controller_name == 'posts' %>"><a href="/posts">Posts</a></li>
              <li class="<%= 'active' if controller_name == 'articles' %>"><a href="/articles">Articles</a></li>
              <% if user_signed_in? %>
                <li class="<%= 'active' if controller_name == 'comments' %>"><a href="/comments">Comments</a></li>
              <% end %>
            </ul>
            <% if user_signed_in? %>
              <ul class="nav navbar-nav navbar-right">
                <li><a href="#"><%= current_user.email %></a></li>
              </ul>
            <% end %>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
